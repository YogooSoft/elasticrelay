# PostgreSQL Environment Configuration for ElasticRelay
# 用于docker-compose的PostgreSQL环境变量配置示例
# 复制为 .env 文件并根据需要修改

# PostgreSQL Database Configuration
POSTGRES_PORT=5432
POSTGRES_DB=elasticrelay
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# MySQL Database Configuration (保留现有)
MYSQL_PORT=3306
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=elasticrelay
MYSQL_USER=elasticrelay_user
MYSQL_PASSWORD=elasticrelay_pass

# Elasticsearch Configuration
ES_PORT=9200
ES_TRANSPORT_PORT=9300

# ElasticRelay Configuration
ELASTIC_RELAY_CONFIG=config/postgresql_config.json
LOG_LEVEL=info
METRICS_PORT=8080
GRPC_PORT=50051

# 数据存储路径
DATA_DIR=./data
LOG_DIR=./logs

# 性能调优参数
POSTGRES_SHARED_BUFFERS=256MB
POSTGRES_MAX_CONNECTIONS=200
POSTGRES_WAL_LEVEL=logical
POSTGRES_MAX_REPLICATION_SLOTS=10
POSTGRES_MAX_WAL_SENDERS=10

# 监控配置
ENABLE_PROMETHEUS=true
PROMETHEUS_PORT=9090

# 开发环境配置
DEVELOPMENT_MODE=true
DEBUG_ENABLED=false
