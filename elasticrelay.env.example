# ElasticRelay 独立部署环境配置

# === 基础配置 ===
ELASTICRELAY_IMAGE=elasticrelay:v1.2.1
CONTAINER_NAME=elasticrelay-standalone
RESTART_POLICY=unless-stopped

# === 端口配置 ===
GRPC_PORT=50051
METRICS_PORT=8080

# === 配置文件路径 ===
# 方式1: 挂载整个配置目录 (推荐)
#CONFIG_PATH=./config
#CONFIG_TARGET=/app/config
#CONFIG_FILE=/app/config/config.json
#CONFIG_MOUNT_MODE=:ro

# 方式2: 挂载单个配置文件 (如果使用，需要修改上面的 CONFIG_PATH)
CONFIG_PATH=./examples/parallel_config.json
CONFIG_TARGET=/app/config/config.json
CONFIG_FILE=/app/config/config.json
CONFIG_MOUNT_MODE=

# === 数据目录配置 ===
LOGS_PATH=./logs
DLQ_PATH=./dlq
CHECKPOINTS_PATH=./checkpoints.json

# === 系统配置 ===
TZ=Asia/Shanghai
LOG_LEVEL=info

# === 健康检查配置 ===
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=30s

# === 网络配置 ===
NETWORK_NAME=elasticrelay-network
NETWORK_EXTERNAL=false

# === 日志配置 ===
LOG_MAX_SIZE=100m
LOG_MAX_FILES=5

# === 资源限制配置 ===
MEMORY_LIMIT=512m
CPU_LIMIT=1.0
MEMORY_RESERVATION=256m
CPU_RESERVATION=0.5
